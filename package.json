{
  "name": "root",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
  "node": ">=23.0.0",
  "bun": ">=1.0.0"
  },
  "scripts": {
  "workspace-run": "bun scripts/workspace-run.mjs",
  "build": "bun run workspace-run build",
  "compile": "bun run build && bunx electron-builder build --config electron-builder.mjs",
  "test": "bunx playwright test ./tests/e2e.spec.ts",
  "start": "bun packages/dev-mode.js",
  "typecheck": "bun run workspace-run typecheck",
  "create-renderer": "cd packages && bun ./integrate-renderer/create-renderer.js",
  "integrate-renderer": "bun run workspace-run start @app/integrate-renderer",
  "init": "bun run create-renderer && bun run integrate-renderer && bun install"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "1.54.2",
    "@types/node": "24.3.0",
    "create-vite": "7.1.1",
    "electron": "37.3.1",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "playwright": "^1.54.2"
  },
  "dependencies": {
    "@app/main": "*"
  }
}
